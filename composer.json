{
    "name": "sherriw/composerexample",
    "description": "Composer Example",
    "authors": [
        {
            "name": "Sherri Wheeler"
        }
    ],
    "require": {
        "pimple/pimple": "^3.0",
        "monolog/monolog": "^1.23",
        "syntaxseed/templateseed": "~1.0",
        "teamtnt/tntsearch": "^1.3",
        "syntaxseed/iplimiter": "^1.0"
    },
    "require-dev": {},
    "autoload": {
        "classmap": [],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "scripts": {
        "set-git-hooks" : [
            "sh hooks/git/setup.sh --precommit=\"phpcsfixer phpcpd phpmd phpunit\""
        ],
        "post-install-cmd": "composer set-git-hooks",
        "post-update-cmd": "composer set-git-hooks"

    },
    "extra": {
        "hooks": {
            "pre-commit": [
                "set -- phpcsfixer phpcpd phpmd phpunit",
                ". \"hooks/git/precommit.sh\""
            ]
        }
    }
}
